@import url('https://fonts.googleapis.com/css2?family=Noto+Sans+TC&display=swap');
body
  font-family 'Noto Sans TC', sans-serif
  height 100%
  width 100%
#app
  height 100vh
  display flex
  flex-direction column-reverse
  overflow-y hidden
  padding 0
  background linear-gradient(180deg, rgba(255, 160, 97, 0.8), rgba(255, 64, 64, 0.8))

#navbar
  display flex
  justify-content space-between
  color white

.navbar-nav
  display flex
  flex-direction row
  width 100%
  justify-content space-around
.navbar-dark .navbar-nav .nav-link
  color: #fff;
#home
  height 100%
  display flex
  flex-direction column
  justify-content center
  align-items center

.home
  width 350px
  height 350px
  border-radius 50%
  border 10px solid rgba(255, 255, 255, 0.6)
  display flex
  justify-content center
  align-items center
  position relative
  flex-direction column
.btn
  position relative
  
#list
  height 100%

.icon 
  font-size 30px